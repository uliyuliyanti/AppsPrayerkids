<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".KeranjangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="3dp">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingRight="30dp"
            android:paddingLeft="0dp"

            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="2sp"
            android:textSize="17sp"
            android:textColor="#000"
            android:text="KERANJANG"
            android:layout_weight="1"

            android:fontFamily="@font/poppinsbold"/>
        <ImageView

            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingRight="0dp"
            android:paddingLeft="30dp"
            android:alpha="0"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            />
    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="4dp"
            android:id="@+id/keranjang_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />


    <LinearLayout
        android:id="@+id/layout_btn_lanjut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#FF5C5C5C"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_items_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="15sp"
                android:text="-"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/total_harga_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="15sp"
                android:text="-"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/black"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#5C5C5C"/>
        <TextView
            android:id="@+id/lanjut_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="12dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_btn_login"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Lanjut Pembayaran"/>
    </LinearLayout>




</LinearLayout>