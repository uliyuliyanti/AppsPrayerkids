<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".PaymentCheckout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="3dp">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingRight="30dp"
            android:paddingLeft="0dp"

            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="2sp"
            android:textSize="17sp"
            android:textColor="#000"
            android:text="CHECKOUT"
            android:layout_weight="1"

            android:fontFamily="@font/poppinsbold"/>
        <ImageView

            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingRight="0dp"
            android:paddingLeft="30dp"
            android:alpha="0"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            />
    </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_details_akun"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/editalamatkirim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="Shipping"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="0dp"
                            android:rotation="180"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/penerima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="13sp"
                            android:text="Penerima :  Nama User"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/alamat_kirim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="13sp"
                            android:text="Alamat: Jl Percetakan Negara 721, /n Dki Jakarta
                               Jakarta, 10520"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/no_hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="13sp"
                            android:text="No-Hp : 0888-xxx-xxxx-xxx"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#BDBDBD"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="0dp"
                            android:rotation="0"
                            android:src="@drawable/icon_box"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="Shipping: J&amp;T"
                            android:layout_weight="1"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/ongkir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="-"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:elevation="5dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_details_akun"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="Detail Order"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <!--            <ImageView-->
                        <!--                android:layout_width="20dp"-->
                        <!--                android:layout_height="20dp"-->
                        <!--                android:paddingLeft="0dp"-->
                        <!--                android:rotation="180"-->
                        <!--                android:src="@drawable/ic_baseline_arrow_back_ios_24"-->
                        <!--                />-->
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView

                        android:layout_margin="4dp"
                        android:id="@+id/checkout_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#BDBDBD"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_item_checkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="-"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/total_harga_checkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="- "
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="Ongkir"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/total_ongkir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="-"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="Grand Total"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/grand_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:text="-"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView

                            android:layout_margin="4dp"
                            android:id="@+id/checkout_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/lanjut_Pembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="12dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_btn_payment"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Lanjut Pembayaran"/>



</LinearLayout>